<section class="admin-products-new">

  <header class="page-header">
    <h1>Sign up!</h1>
  </header>

  <%= form_for :user, url: '/users' do |f| %>

    <div class="mb-3">
      <label for="first_name" class="form-label">First Name</label>
      <%= f.text_field :first_name, class: "form-control", id: "first_name" %>
    </div>

    <div class="mb-3">
      <label for="last-name" class="form-label">Last Name</label>
      <%= f.text_field :last_name, class: "form-control", id: "last_name" %>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <%= f.text_field :email, class: "form-control", id: "email" %>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <%= f.password_field :password, class: "form-control", id: "password" %>
    </div>

    <div class="mb-3">
      <label for="password_confirmation" class="form-label">Password Confirmation</label>
      <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-success" %>

  <% end %>

</section>
